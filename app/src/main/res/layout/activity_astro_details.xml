<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".astrologer.AstroDetailsActivity">

     <ImageView
         android:layout_margin="@dimen/_20sdp"
         android:elevation="@dimen/_10sdp"
         android:id="@+id/iv_astroDetails"
         android:layout_width="match_parent"
         android:layout_height="@dimen/_310sdp"/>


    <TextView
        android:padding="@dimen/_10sdp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_astroDetails"
        android:layout_margin="14dp"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Name"
        android:id="@+id/astroNameDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_below="@id/astroNameDetails"
        android:layout_marginTop="11dp"
        android:id="@+id/astroNameLayout1"
        android:layout_marginLeft="48dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/astrology"
            android:id="@+id/start_1"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:tint="@color/purple_500" />

        <TextView
            android:textColor="#000"
            android:layout_toRightOf="@id/start_1"
            android:layout_margin="4dp"
            android:id="@+id/astroTypeDetails"
            android:textSize="11sp"
            android:text="Tarot,Vedic,Astrology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="9dp"
            android:layout_centerVertical="true"
            android:src="@drawable/language"
            android:layout_below="@id/astroTypeDetails"
            android:id="@+id/start_2"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:tint="@color/purple_500" />

        <TextView
            android:textColor="#000"
            android:layout_toRightOf="@id/start_2"
            android:layout_margin="6dp"
            android:id="@+id/astroLanguageDetails"
            android:textSize="11sp"
            android:text="English,Hindi"
            android:layout_below="@id/astroTypeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="7dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_place_24"
            android:layout_below="@id/astroLanguageDetails"
            android:id="@+id/astroLocation"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:tint="@color/purple_500" />

        <TextView
            android:textColor="#000"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toRightOf="@id/start_2"
            android:layout_marginTop="@dimen/_8sdp"
            android:id="@+id/astroLocationText"
            android:textSize="11sp"
            android:text="Delhi"
            android:layout_below="@id/start_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_below="@id/astroNameDetails"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/astroNameLayout1"
        android:layout_width="110dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="24dp"
            android:src="@drawable/graduation_hat"
            android:id="@+id/start_3"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:tint="@color/purple_500" />

        <TextView
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/start_3"
            android:id="@+id/astroExpDetails"
            android:padding="2dp"
            android:textSize="11sp"
            android:text="5 Years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_below="@id/astroExpDetails"
            android:layout_marginTop="4dp"
            android:src="@drawable/rupee_indian"
            android:id="@+id/start_4"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:tint="@color/purple_500" />
        <TextView
            android:textColor="#000"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/start_4"
            android:layout_below="@id/astroExpDetails"
            android:id="@+id/astroChargeDetails"
            android:padding="2dp"
            android:textSize="11sp"
            android:text="20 / Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>