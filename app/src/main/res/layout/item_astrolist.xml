<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#FFF"
    android:layout_marginTop="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp">

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:textSize="11sp"
            android:textAlignment="center"
            android:layout_below="@id/image"
            android:id="@+id/title"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="11dp"
        android:id="@+id/astroNameLayout"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/profile_layout"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="4dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Name"
            android:id="@+id/astroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="4dp"
            android:id="@+id/astroType"
            android:textSize="11sp"
            android:text="Tarot,Vedic,Astrology"
            android:layout_below="@id/astroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="4dp"
            android:id="@+id/astroLanguage"
            android:textSize="11sp"
            android:text="English,Hindi"
            android:layout_below="@id/astroType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="4dp"
            android:id="@+id/astroStatus"
            android:textSize="11sp"
            android:text="Status"
            android:layout_below="@id/astroLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@drawable/shape_status"
            android:layout_toRightOf="@id/astroStatus"
            android:layout_margin="4dp"
            android:id="@+id/astroOnline"
            android:textSize="11sp"
            android:layout_below="@id/astroLanguage"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView
            android:visibility="gone"
            android:background="@drawable/offline_shape"
            android:layout_toRightOf="@id/astroStatus"
            android:layout_margin="4dp"
            android:id="@+id/astroOffline"
            android:textSize="11sp"
            android:layout_below="@id/astroLanguage"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/astroNameLayout"
        android:layout_width="110dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/astroExp"
            android:padding="2dp"
            android:textSize="11sp"
            android:text="5 Years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/astroExp"
            android:id="@+id/astroCharge"
            android:padding="2dp"
            android:textSize="11sp"
            android:text="20 / Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:backgroundTint="#4CAF50"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:layout_below="@id/astroCharge"
            android:textSize="12sp"
            android:text="Call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>