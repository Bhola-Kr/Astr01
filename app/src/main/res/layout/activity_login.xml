<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_iv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/astro_banner" />

            <androidx.cardview.widget.CardView
                android:id="@+id/login_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_iv"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:elevation="18dp">

                <LinearLayout
                    android:id="@+id/radio_btn_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_reg_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="6dp"
                        android:text="Enter Name"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="16dp"
                        android:drawableRight="@drawable/ic_baseline_perm_identity_24"
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="your name"
                        android:padding="4dp" />


                    <TextView
                        android:id="@+id/tv_reg_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="4dp"
                        android:text="Select Your Gender"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:checked="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female" />
                    </RadioGroup>


                    <TextView
                        android:id="@+id/selectDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="4dp"
                        android:text="Select Date of Birth"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/et_dob"
                        android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="Dob"
                        android:padding="4dp" />

                    <TextView
                        android:layout_marginEnd="16dp"
                        android:id="@+id/select_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="4dp"
                        android:text="Select time of Birth"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="16dp"
                        android:drawableRight="@drawable/ic_baseline_access_time_24"
                        android:id="@+id/et_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="Time"
                        android:padding="4dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="4dp"
                        android:text="Enter Birth Place"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="16dp"
                        android:drawableRight="@drawable/ic_baseline_place_24"
                        android:id="@+id/birth_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="sans-serif"
                        android:hint="Place"
                        android:padding="4dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:padding="4dp"
                            android:text="If you are a astrologer select"
                            android:textColor="#FF5722"
                            android:textSize="15sp" />

                        <CheckBox
                            android:layout_alignParentRight="true"
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_card"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="#FFF" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_register"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:text="Copyright Â© Astro4Call S.L. All rights reserved."
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>