<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/astro_headerId"
    android:layout_marginTop="@dimen/_46sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="@dimen/_15sdp"
        android:id="@+id/astro_navigation_realtive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/astro_Guestphoto"
            android:background="@drawable/welcome_img"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp" />

        <TextView
            android:layout_toRightOf="@id/astro_Guestphoto"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="@dimen/_15sdp"
            android:id="@+id/astro_Guestname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:text="Guest"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/astro_navigation_realtive"
        android:id="@+id/astro_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/astro_timeText"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00h:00m:00s"/>

    </RelativeLayout>

    <View
        android:layout_below="@+id/astro_time"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_4sdp"
        android:background="@drawable/toolbar_dropshadow"/>

</RelativeLayout>