<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:elevation="10dp"
    android:background="#FFF"
    android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/profile_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image1"
            android:layout_width="76dp"
            android:layout_height="76dp" />

        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:maxWidth="0dp"
            android:maxHeight="0dp"
            android:src="@drawable/star"
            android:textAlignment="center"
            android:layout_below="@id/image1"
            android:id="@+id/title"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/astroRating1"
            android:layout_marginTop="3dp"
            android:text=" 5.0"
            android:textSize="14sp"
            android:layout_below="@id/image1"
            android:layout_toRightOf="@id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="11dp"
        android:id="@+id/astroNameLayout1"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/profile_layout1"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="4dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Name"
            android:id="@+id/astroName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="7dp"
            android:layout_centerVertical="true"
            android:src="@drawable/astrology"
            android:layout_below="@id/astroName1"
            android:id="@+id/start_1"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:tint="@color/purple_500" />

        <TextView
            android:layout_toRightOf="@id/start_1"
            android:layout_margin="4dp"
            android:id="@+id/astroType1"
            android:textSize="11sp"
            android:text="Tarot,Vedic,Astrology"
            android:layout_below="@id/astroName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="7dp"
            android:layout_centerVertical="true"
            android:src="@drawable/language"
            android:layout_below="@id/astroType1"
            android:id="@+id/start_2"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:tint="@color/purple_500" />

        <TextView
            android:layout_toRightOf="@id/start_2"
            android:layout_margin="4dp"
            android:id="@+id/astroLanguage1"
            android:textSize="11sp"
            android:text="English,Hindi"
            android:layout_below="@id/astroType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_margin="4dp"
            android:id="@+id/astroStatus1"
            android:textSize="11sp"
            android:text="Status"
            android:layout_below="@id/astroLanguage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@drawable/shape_status"
            android:layout_toRightOf="@id/astroStatus1"
            android:layout_margin="4dp"
            android:id="@+id/astroOnline1"
            android:textSize="11sp"
            android:layout_below="@id/astroLanguage1"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView
            android:visibility="gone"
            android:background="@drawable/offline_shape"
            android:layout_toRightOf="@id/astroStatus1"
            android:layout_margin="4dp"
            android:id="@+id/astroOffline1"
            android:textSize="11sp"
            android:layout_below="@id/astroLanguage1"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <TextView
            android:visibility="gone"
            android:background="@drawable/buisy_status"
            android:layout_toRightOf="@id/astroStatus1"
            android:layout_margin="4dp"
            android:id="@+id/astroOfBuisy1"
            android:textSize="11sp"
            android:layout_below="@id/astroLanguage1"
            android:layout_width="15dp"
            android:layout_height="15dp"/>

        <ImageView
            android:id="@+id/chat_iv_item"
            android:layout_marginLeft="90dp"
            android:background="@drawable/speak"
            android:layout_below="@id/astroLanguage1"
            android:layout_width="30dp"
            android:layout_marginBottom="6dp"
            android:layout_height="30dp"
            app:tint="@color/purple_500" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/astroNameLayout1"
        android:layout_width="110dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="24dp"
            android:src="@drawable/graduation_hat"
            android:id="@+id/start_3"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:tint="@color/purple_500" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/start_3"
            android:id="@+id/astroExp1"
            android:padding="2dp"
            android:textSize="11sp"
            android:text="5 Years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_below="@id/astroExp1"
            android:layout_marginTop="4dp"
            android:src="@drawable/rupee_indian"
            android:id="@+id/start_4"
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:tint="@color/purple_500" />
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/start_4"
            android:layout_below="@id/astroExp1"
            android:id="@+id/astroCharge1"
            android:padding="2dp"
            android:textSize="11sp"
            android:text="20 / Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/video_call_iv"
            android:background="@drawable/video"
            android:textAllCaps="false"
            android:layout_marginTop="22dp"
            android:layout_below="@id/astroCharge1"
            android:textSize="12sp"
            android:text="Call"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageView
            android:id="@+id/call_iv_item"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/video_call_iv"
            android:background="@drawable/telephone1"
            android:textAllCaps="false"
            android:layout_marginTop="26dp"
            android:layout_below="@id/astroCharge1"
            android:textSize="12sp"
            android:text="Call"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </RelativeLayout>

</RelativeLayout>